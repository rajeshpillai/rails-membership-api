<p id="notice"><%= notice %></p>

<h1>Dependents</h1>

<table>
  <thead>
    <tr>
      <th>Relationship</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Blood group</th>
      <th>Date of birth</th>
      <th>Weight</th>
      <th>Height</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dependents.each do |dependent| %>
      <tr>
        <td><%= dependent.relationship %></td>
        <td><%= dependent.name %></td>
        <td><%= dependent.email %></td>
        <td><%= dependent.phone %></td>
        <td><%= dependent.blood_group %></td>
        <td><%= dependent.date_of_birth %></td>
        <td><%= dependent.weight %></td>
        <td><%= dependent.height %></td>
        <td><%= dependent.user_id %></td>
        <td><%= link_to 'Show', dependent %></td>
        <td><%= link_to 'Edit', edit_dependent_path(dependent) %></td>
        <td><%= link_to 'Destroy', dependent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

